{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "config": {
      "background": "#ffffff",
      "view": {
        "stroke": "#000000",
        "strokeWidth": 2
      }
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/population_state_with_year.csv"
    },
    "transform": [
      {
        "filter": "datum.year == 2024"
      },
      {
        "filter": "datum.age != 'overall'"
      }
    ],
    "layer": [
      {
        "mark": "bar",
        "transform": [
          {
            "calculate": "-datum.population",
            "as": "population_neg"
          }
        ],
        "encoding": {
          "y": {
            "field": "age",
            "type": "ordinal",
            "title": "Age Group",
            "axis": {
              "labelAngle": 0,
              "orient": "left" 
            }
          },
          "x": {
            "field": "population_neg",
            "type": "quantitative",
            "title": "Population",
            "axis": {
              "format": ",d"
            }
          },
          "color": {
            "value": "#4B86E4" 
          }
        }
      },
      {
        "mark": "bar",
        "encoding": {
        "y": {
            "field": "age",
            "type": "ordinal",
            "title": "Age Group",
            "axis": {
                "labelAngle": 0,
                "orient": "left" 
            }
            },
          "x": {
            "field": "population",
            "type": "quantitative",
            "title": "Population",
            "axis": {
              "format": ",d",
              "orient": "top" 
            }
          },
          "color": {
            "value": "#FF69B4" 
          }
        }
      }
    ],
    "title": "Population Pyramid for 2024 by Age and Sex"
  }
  