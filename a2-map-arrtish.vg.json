{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 430,
    "config": {
        "background": "#a8cde0"
    },
    "projection": {"type": "equalEarth"},
    "params": [
        {
            "name": "year_selection",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 1980,
                "max": 2024,
                "step": 1,
                "name": "Select Year: "
            }
        }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/gadm41_MYS_1.json",
          "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
        },
        "transform": [
          {
            "lookup": "properties.NAME_1",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/arrtish.csv",
                "format": {"type": "csv"}
              },
              "key": "state",
              "fields": ["1970","1971","1972","1973","1974","1975","1976","1977","1978","1979","1980","1981","1982","1983","1984","1985","1986","1987","1988","1989","1990","1991","1992","1993","1994","1995","1996","1997","1998","1999","2000","2001","2002","2003","2004","2005","2006","2007","2008","2009","2010","2011","2012","2013","2014","2015","2016","2017","2018","2019","2020","2021","2022","2023","2024"]
            }
          },
          {
            "calculate": "toNumber(datum[year_selection])",
            "as": "pop"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.5
        },
        "encoding": {
            "color": {
                "field": "pop",
                "type": "quantitative",
                "scale": {
                    "type": "threshold", 
                    "domain": [1000, 2000, 3000, 4000, 5000, 6000, 7000, 8000, 9000, 10000], 
                    "range": [
                        "#DEEDCF",           
                        "#B8DEAA",           
                        "#88CE86",                
                        "#62BE73",                     
                        "#3FAC6C",                          
                        "#1D9A6C",                          
                        "#198C75",
                        "#147E7B",
                        "#116270", 
                        "#0D4761",
                        "#0A2F51" 
                    ]
                },
                "legend": {
                    "title": "Population",
                    "format": ","  
                }
            },
          "tooltip": [
            {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
            {"field": "pop", "type": "quantitative", "title": "Population"}
          ]
        }
      }
    ]
}
