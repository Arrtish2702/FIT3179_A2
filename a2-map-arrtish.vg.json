{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 480,
    "config": {
        "background": "#a8cde0"
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/gadm41_MYS_1.json",
          "format": {"type": "topojson", "feature": "gadm41_MYS_1"}
        },
        "transform": [
          {
            "lookup": "properties.NAME_1",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/population_state_with_year_filtered.csv",
                "format": {"type": "csv"}
              },
              "key": "state",
              "fields": ["population", "year"]
            }
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.5
        },
        "encoding": {
            "color": {
                "field": "population",
                "type": "quantitative",
                "scale": {
                    "type": "threshold", 
                    "domain": [1000, 2000, 3000, 4000, 5000, 6000, 7000, 8000, 9000, 10000], 
                    "range": [
                        "#DEEDCF",           
                        "#B8DEAA",           
                        "#88CE86",                
                        "#62BE73",                     
                        "#3FAC6C",                          
                        "#1D9A6C",                          
                        "#198C75",
                        "#147E7B",
                        "#116270", 
                        "#0D4761",
                        "#0A2F51" 
                    ]
                },
                "legend": {
                    "title": "Population",
                    "format": ","  
                }
            },
          "tooltip": [
            {"field": "properties.NAME_1", "type": "nominal", "title": "State"},
            {"field": "population", "type": "quantitative", "title": "Population"}
          ]
        }
      }
    ]
}
