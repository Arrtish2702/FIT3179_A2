{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 480,
    "config": {
        "background": "#ffffff",
        "view": {
            "stroke": "#000000",
            "strokeWidth": 2
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179_A2/main/population_state_with_year.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {
            "filter": "datum.sex == 'both'"
        },
        {
            "filter": "datum.age == 'overall'"
        },
        {
            "filter": "datum.ethnicity == 'overall'"
        },
        {
            "filter": "stateSelection === 'All' || datum.state == stateSelection"
        },
        {
            "filter": "datum.year % 5 == 0"  
        }
    ],
    "params": [
        {
            "name": "stateSelection",
            "value": "All",
            "bind": {
                "input": "select",
                "options": [
                    "All",
                    "Johor",
                    "Kedah",
                    "Kelantan",
                    "Melaka",
                    "Negeri Sembilan",
                    "Pahang",
                    "Pulau Pinang",
                    "Perak",
                    "Perlis",
                    "Sabah",
                    "Sarawak",
                    "Selangor",
                    "Terengganu",
                    "Kuala Lumpur",
                    "Putrajaya",
                    "Labuan"
                ],
                "name": "Select State: "
            }
        }
    ],
    "layer": [
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "year",
                    "type": "ordinal",
                    "axis": {
                        "title": "Year",
                        "labelFontSize": 14,  
                        "titleFontSize": 16    
                    }
                },
                "y": {
                    "aggregate": "sum",
                    "field": "population",
                    "type": "quantitative",
                    "axis": {
                        "title": "Population",
                        "labelFontSize": 14,  
                        "titleFontSize": 16   
                    }
                },
                "color": {
                    "field": "state",
                    "type": "nominal",
                    "scale": {
                    "range": [
                        "#4b5320", "#3d2b1f", "#006a4e", "#6699cc", "#0070ff",
                        "#08e8de", "#cc5500", "#98817b", "#f0e130", "#8b008b",
                        "#cc00cc", "#996515", "#4b0082", "#f56991"
                    ]
                    },
                    "legend": {
                    "title": "State",
                    "labelFontSize": 14,
                    "titleFontSize": 16
                    }
                },                  
                "tooltip": [
                    {"field": "state", "type": "nominal", "title": "State"},
                    {"aggregate": "sum", "field": "population", "type": "quantitative", "title": "Population"},
                    {"field": "year", "type": "nominal", "title": "Year"}
                ]
            }
        }
    ]
}
